<%= render 'shared/page_title', title: "All recipes" %>

<% @recipes.each do |r| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for r.chef, size: 100 %>
        <h5>Chef: <%= r.chef.chefname %></h5>
      </section>
    </div>
    <div class="col-md-6 well">
      <h4><%= link_to r.name, recipe_path(r) %></h4>
      <p><%= r.summary %></p>
      <p>
        <span class="quiet"><small><%= time_ago_in_words(r.created_at) %></small></span>
    </div>

    <div class="col-md-4">
      <%= image_tag(r.picture.url, size: "250x150", class: "gravatar") if r.picture? %>
    </div>
  </div>
  <hr />
<% end %>
